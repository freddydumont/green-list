datasource sqlite {
    url = "file:dhammagreenlist.db"
    provider = "sqlite"
}

model User {
    id        Int      @id @default(autoincrement())
    full_name      String
    last_name      String
    date_of_birth   DateTime
    gender  Gender
    hometown HomeTown
    phone_number String?
    email     String   @unique
    contact_by ContactBy
    consent_to_contact Boolean @default(false)
    availability Availability[]
    other_skill String?
    skill Skill[]
}

model Skill {
    id        Int      @id @default(autoincrement())
    interest Interest[]
    skill String
}

model Interest {
    id        Int      @id @default(autoincrement())
    interest String @unique
    skill Skill[]
}

model HomeTown {
    id        Int      @id @default(autoincrement())
    hometown String @unique
}

model Availability {
    id        Int      @id @default(autoincrement())
    availability String @unique
}

enum Gender {
    Male
    Female
}

enum ContactBy {
    Email
    Phone
    Sms
}