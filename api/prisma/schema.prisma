datasource sqlite {
    url = "file:dhammagreenlist.db"
    provider = "sqlite"
}

model User {
    id        Int      @id @default(autoincrement())
    full_name      String?
    last_name      String?
    date_of_birth   DateTime?
    gender  GenderEnum
    hometown HomeTown
//    hometown HomeTown
    phone_number String?
    email     String   @unique
    contact_by ContactBy
    consent_to_contact Boolean @default(false)
}

model UserAvailabilites {
    id        Int      @id @default(autoincrement())
    user User
    availabilities Availabilities[]
}

model Availabilities {
    id        Int      @id @default(autoincrement())
    availability String @unique
}

model UserSkills {
    id        Int      @id @default(autoincrement())
    user User
    skills Skills[]
}

model Skills {
    id        Int      @id @default(autoincrement())
    interest Interest[]
    skill String
}

model Interest {
    id        Int      @id @default(autoincrement())
    interest String @unique
}


model HomeTown {
    id        Int      @id @default(autoincrement())
    city String
    province String
    country String @unique
}

enum GenderEnum {
    Male
    Female
}

enum ContactBy {
    Email
    Phone
    Sms
}